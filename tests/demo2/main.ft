import (
  . "std/faas"
)

@function split {
  runtime = "python"
}

@function sort {
  runtime = "python"
}

@function count {
  runtime = "python"
}

@workflow WordCountFlow {
  // env.FAASIT_WORKFLOW_FUNC = split
  functions = [split, sort, count]

  // workflow spec runtime
  runtime = "python"
  codeDir = "./code"
}

@application WordCount {
  workflow = WordCountFlow
  defaultProvider = Local
  providers= [Local, Knative]

  // used by `ft run`
  inputExamples = [
    {
      value = {
        text = "Hello world this is a happy day"
        batchSize = 3
      }
    }
  ]
}

@provider Local {
  kind = "local"
}

@provider Knative {
  kind = "knative"
}
